<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recommend_recycler_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/title_left"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/recommend_recycler_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/btn_home_content_rignt_huan"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="换一批"
            android:textColor="@drawable/btn_home_content_color_huan"
            android:textSize="12sp"/>
    </LinearLayout>

    <com.qianfeng.manmankan.view.CustomGridView
        android:id="@+id/recommend_recycler_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:numColumns="2"
        android:layout_marginBottom="8dp"/>
</android.support.v7.widget.CardView>